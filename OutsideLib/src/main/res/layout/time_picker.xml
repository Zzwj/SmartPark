<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/timepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <com.xcoder.smartpark.outside.pickerview.lib.WheelView
            android:id="@+id/year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:pickerview_dividerColor="#8CC220"
            app:pickerview_textColorOut="#c8c8c8"
            app:pickerview_textColorCenter="#737373"
            android:layout_weight="1" />

        <com.xcoder.smartpark.outside.pickerview.lib.WheelView
            android:id="@+id/month"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:pickerview_dividerColor="#8CC220"
            app:pickerview_textColorOut="#c8c8c8"
            app:pickerview_textColorCenter="#737373"
            android:layout_weight="1.1" />

        <com.xcoder.smartpark.outside.pickerview.lib.WheelView
            android:id="@+id/day"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:pickerview_dividerColor="#8CC220"
            app:pickerview_textColorOut="#c8c8c8"
            app:pickerview_textColorCenter="#737373"
            android:layout_weight="1.1" />

        <com.xcoder.smartpark.outside.pickerview.lib.WheelView
            android:id="@+id/hour"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:pickerview_dividerColor="#8CC220"
            app:pickerview_textColorOut="#c8c8c8"
            app:pickerview_textColorCenter="#737373"
            android:layout_weight="1.1" />

        <com.xcoder.smartpark.outside.pickerview.lib.WheelView
            android:id="@+id/min"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:pickerview_dividerColor="#8CC220"
            app:pickerview_textColorOut="#c8c8c8"
            app:pickerview_textColorCenter="#737373"
            android:layout_weight="1.1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F0F0F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F0F0F0">

        <TextView
            android:id="@+id/time_picker_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="取消"
            android:textColor="#737373"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_picker_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:textColor="#8CC220"
            android:text="确定"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>