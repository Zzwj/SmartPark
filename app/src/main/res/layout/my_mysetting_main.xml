<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">


    <RelativeLayout style="@style/AppHead">

        <LinearLayout
            android:id="@+id/my_setting_back_iv"
            style="@style/AppBlackLayout">

            <ImageView style="@style/AppBlackImage" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/app_txt_title_big" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/my_setting_about_rl"
            style="@style/AppLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_form_hight">

            <ImageView
                android:id="@+id/my_mysetting_aboutus_iv"
                style="@style/AppImage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/my_mysetting_aboutus_ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/my_mysetting_aboutus_iv"
                android:text="关于"
                android:textSize="@dimen/app_txt_title_min" />

            <ImageView
                style="@style/AppImage"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/my_mysetting_rightarrow_ico" />

        </RelativeLayout>

        <View
            style="@style/App_Line_Style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <RelativeLayout
            android:id="@+id/my_setting_explain_rl"
            style="@style/AppLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_form_hight">

            <ImageView
                android:id="@+id/my_mysetting_explain_iv"
                style="@style/AppImage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/my_mysetting_explain_ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/my_mysetting_explain_iv"
                android:text="使用说明"
                android:textSize="@dimen/app_txt_title_min" />

            <ImageView
                style="@style/AppImage"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/my_mysetting_rightarrow_ico" />

        </RelativeLayout>

        <View
            style="@style/App_Line_Style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />


        <RelativeLayout
            style="@style/AppLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_form_hight">

            <ImageView
                android:id="@+id/my_mysetting_clean_iv"
                style="@style/AppImage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/my_mysetting_clean_ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/my_mysetting_clean_iv"
                android:text="缓存"
                android:textSize="@dimen/app_txt_title_min" />

            <TextView
                android:id="@+id/my_setting_cache_tv"
                style="@style/AppLvItemGreenShapeStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="清除缓存" />

        </RelativeLayout>

        <View
            style="@style/App_Line_Style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/my_mysetting_appupdate_rl"
            style="@style/AppLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_form_hight">

            <ImageView
                android:id="@+id/my_mysetting_appupdate_iv"
                style="@style/AppImage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/my_mysetting_clean_ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/my_mysetting_appupdate_iv"
                android:text="App更新"
                android:textSize="@dimen/app_txt_title_min" />


            <ImageView
                android:id="@+id/my_mysetting_appupdate_toiv"
                style="@style/AppImage"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/my_mysetting_rightarrow_ico" />

            <TextView
                android:id="@+id/my_mysetting_appupdate_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/my_mysetting_appupdate_toiv"
                android:textColor="@color/app_txt_gray"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/my_setting_aboutus_linehor3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/app_bg_color" />

        <RelativeLayout
            android:id="@+id/my_setting_out_rl"
            style="@style/AppLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_form_hight">

            <ImageView
                android:id="@+id/my_mysetting_logout_iv"
                style="@style/AppImage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/my_mysetting_logout_ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/my_mysetting_logout_iv"
                android:text="退出登录"
                android:textSize="@dimen/app_txt_title_min" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>