<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="15dp">

    <com.xcoder.smartpark.widget.view.CircleImageView
        android:id="@+id/my_order_lv_item_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/app_lv_item_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/my_order_lv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="接客专用车"
            android:textColor="@color/app_txt_green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_order_lv_item_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/my_order_lv_item_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/my_order_lv_item_name"
            android:text="京A 58365 自动挡"
            android:textColor="@color/app_txt_green"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/my_order_lv_item_locll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/my_order_lv_item_car"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/my_order_lv_item_location"
                style="@style/AppLvItemRedShapeStyle"
                android:text="查看车辆位置" />
        </LinearLayout>

        <TextView
            android:id="@+id/my_order_lv_item_car_det"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_order_lv_item_name"
            android:layout_marginTop="3dp"
            android:text="奔驰 s350 黑色"
            android:textColor="@color/app_txt_gray"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/my_order_lv_item_timeico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_order_lv_item_car_det"
            android:layout_marginTop="3dp"
            android:paddingBottom="1dp"
            android:src="@drawable/tou_phone_time_ico" />

        <TextView
            android:id="@+id/my_order_lv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_order_lv_item_timeico"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/my_order_lv_item_timeico"
            android:text="预约时间：2016年11月8日 19:30"
            android:textColor="@color/app_txt_gray"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/my_order_lv_item_peopleico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_order_lv_item_timeico"
            android:layout_marginTop="3dp"
            android:paddingBottom="2dp"
            android:src="@drawable/tou_phone_ico" />

        <TextView
            android:id="@+id/my_order_lv_item_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_order_lv_item_peopleico"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/my_order_lv_item_peopleico"
            android:text="司机：张师傅"
            android:textColor="@color/app_txt_gray"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/my_order_lv_item_phoneico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_order_lv_item_people"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/my_order_lv_item_people"
            android:paddingBottom="2dp"
            android:src="@drawable/tou_phone_ico" />

        <TextView
            android:id="@+id/my_order_lv_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/my_order_lv_item_phoneico"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/my_order_lv_item_phoneico"
            android:text="18878898766"
            android:textColor="@color/app_txt_gray"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>