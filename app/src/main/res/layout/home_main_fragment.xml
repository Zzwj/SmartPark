<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout style="@style/AppHead">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="和园区"
            android:textColor="@color/white"
            android:textSize="@dimen/app_txt_title_big" />
    </RelativeLayout>

    <com.xcoder.lib.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_main_iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="600dp"
                android:scaleType="centerInside"
                android:src="@drawable/home_main_head_iv" />

            <com.xcoder.smartpark.widget.view.MyGridView
                android:id="@+id/home_mgv1"
                android:layout_width="match_parent"
                android:numColumns="3"
                android:listSelector="@color/transparent"
                android:layout_height="wrap_content" />

            <com.xcoder.smartpark.widget.view.MyGridView
                android:id="@+id/home_mgv2"
                android:layout_width="match_parent"
                android:numColumns="3"
                android:layout_marginTop="10dp"
                android:listSelector="@color/transparent"
                android:layout_height="wrap_content" />

            <com.xcoder.smartpark.widget.view.MyGridView
                android:id="@+id/home_mgv3"
                android:layout_width="match_parent"
                android:numColumns="3"
                android:layout_marginTop="10dp"
                android:listSelector="@color/transparent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white" />
        </LinearLayout>
    </com.xcoder.lib.view.ReboundScrollView>

</LinearLayout>