<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/app_dialog_bg_shape"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/app_update_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@color/app_green_color"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/app_update_dialog_selector" />


    <TextView
        android:id="@+id/app_update_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="当前进度: 10/100"
        android:textColor="@color/app_txt"
        android:textSize="11sp" />

    <View
       style="@style/App_Line_Style" />

    <Button
        android:id="@+id/app_update_cancel"
        style="@style/AppButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="取消"
        android:textColor="@color/app_txt"
        android:textSize="16sp" />

</LinearLayout>