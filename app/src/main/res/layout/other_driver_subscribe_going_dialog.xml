<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="设置状态"
        android:textSize="@dimen/app_txt_title_big" />

    <View style="@style/App_Line_Style" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/going_dialog_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约时间:"
            android:textColor="@color/app_txt_green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/going_dialog_time_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/going_dialog_time_tv"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/going_dialog_time_tv"
            android:text="开始时间：2016年11月8日 19:30"
            android:textColor="@color/app_txt_gray"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/going_dialog_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/going_dialog_time_begin"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/going_dialog_time_tv"
            android:text="结束时间：2016年11月8日 19:30"
            android:textColor="@color/app_txt_gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/going_dialog_people_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/going_dialog_time_end"
            android:layout_marginTop="3dp"
            android:text="预约人："
            android:textColor="@color/app_txt_green"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/going_dialog_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/going_dialog_people_tv"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/going_dialog_people_tv"
            android:text="张三"
            android:textColor="@color/app_txt_gray"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/going_dialog_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/going_dialog_people_tv"
            android:layout_marginTop="5dp"
            android:text="联系电话："
            android:textColor="@color/app_txt_green"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/going_dialog_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/going_dialog_phone_tv"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/going_dialog_phone_tv"
            android:text="12379871238"
            android:textColor="@color/app_txt_gray"
            android:textSize="11sp" />
    </RelativeLayout>

    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/going_dialog_oncar"
            style="?attr/buttonBarPositiveButtonStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/going_dialog_submit"
            android:layout_alignParentRight="false"
            android:text="已上车" />

        <Button
            android:id="@+id/going_dialog_submit"
            style="?attr/buttonBarPositiveButtonStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="完成出行" />

    </LinearLayout>




</LinearLayout>