<resources>

    <!--5.x手机样式适配-->

    <!-- //////////////////// MD效果需要的Style/////////////////////////////-->

    <!--    AppButton的基本主题-->
    <style name="AppButtonTheme" parent="Widget.AppCompat.Button">
        <!--    <item name="colorButtonNormal">@color/blue</item>//这个颜色设置是没用用的，-->
        <!--扁平化按钮是没有背景色的-->
      <!--  <item name="colorControlHighlight">@color/app_green_color</item>-->
        <item name="android:colorControlHighlight">@color/app_green_color</item>
    </style>

    <!--   需要MD水波纹效果的布局用这个主题-->
    <style name="AppLayoutTheme" parent="AppTheme">
        <item name="android:colorControlHighlight">@color/app_green_color</item>
    </style>



    <!--    AppButton的MD扁平化水波纹-->
    <style name="AppButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:theme">@style/AppButtonTheme</item>
    </style>

    <!--    App布局的MD的扁平水波纹-->
    <style name="AppLayoutStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:theme">@style/AppLayoutTheme</item>
    </style>



    <!--    ////////////////////MD效果需要的Style-///////////////// -->
</resources>
