    <!--listview的基本样式-->
    <style name="AppListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:divider">@drawable/app_lv_divider</item>
        <item name="android:dividerHeight">15dp</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarThumbVertical">@color/app_green_color</item>
    </style>


    <!--Innerlistview的基本样式-->
    <style name="InnerListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:divider">@color/lv_divider_color</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarThumbVertical">@color/app_green_color</item>
    </style>

    <!--listview中使用的椭圆形的textview-->
    <style name="AppLvItemShapeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--listview中使用的椭圆形的textview[红色的]-->
    <style name="AppLvItemRedShapeStyle" parent="AppLvItemShapeStyle">
        <item name="android:background">@drawable/app_lv_item_red_selector</item>
    </style>

    <!--listview中使用的椭圆形的textview[绿色的]-->
    <style name="AppLvItemGreenShapeStyle" parent="AppLvItemShapeStyle">
        <item name="android:background">@drawable/app_lv_item_green_selector</item>
    </style>

    <!--listview中使用的椭圆形的textview[绿色的]-->
    <style name="AppLvItemGrayShapeStyle" parent="AppLvItemShapeStyle">
        <item name="android:background">@drawable/app_lv_item_gray_shape</item>
    </style>

    <!-- 头部栏，textview按下的效果-->
    <style name="AppTitleTvClickStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/app_title_paddingLeft</item>
        <item name="android:paddingRight">@dimen/app_title_paddingRight</item>
        <item name="android:background">@drawable/app_title_tv_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/app_txt_title_min</item>
    </style>

    <!--   一般的条目的layoustyle-->
    <style name="LinLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <!--   一般的条目的layoustyle-->
    <style name="LinLayoutStyle.TouRegister">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <!--  一般的条目的TextView的style-->
    <style name="LinTextViewLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/app_txt</item>
        <item name="android:textSize">@dimen/app_txt</item>
    </style>


    <style name="HomeImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:maxHeight">180dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_margin">3dp</item>
    </style>
</resources>
