<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_green_color</item>
        <item name="colorPrimaryDark">@color/app_green_color</item>
        <item name="colorAccent">@color/app_green_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppWriteTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <!-- popup的动画效果-->
    <style name="AppPopupAnim">
        <item name="android:windowEnterAnimation">@anim/message_popup_display
        </item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/message_popup_exit</item>
        <!-- 指定消失的动画xml -->
    </style>
    <style name="OtherPopupAnim">
        <item name="android:windowEnterAnimation">@anim/other_popup_diplay
        </item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/other_popup_exit</item>
        <!-- 指定消失的动画xml -->
    </style>


    <style name="AppHead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/app_head_color</item>
    </style>

    <!--后退按钮的图片style，app所有后退必须用这个-->
    <style name="AppBlackImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/app_leftarrow_ico</item>
    </style>

    <!--后退按钮layoutStyle，app所有后退必须用这个-->
    <style name="AppBlackLayout">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/app_black_selector</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!--App图片style，尽量用这个，限制好大小-->
    <style name="AppImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!--头部栏右边图片layout的按下效果，-->
    <style name="AppHeadRightPress">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/app_black_selector</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!--listvie的按下效果-->
    <style name="AppListViewItemSelector">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/app_listview_selector</item>
    </style>

    <!--    app的横分割线-->
    <style name="App_Line_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/module_divider_color</item>
    </style>

    <!--    app的横分割线-->
    <style name="App_LineMarg_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@color/module_divider_color</item>
    </style>

  <!--  Dialog的基本样式-->
    <style name="AppDialog" parent="AppTheme">
        <item name="android:backgroundDimEnabled">true</item><!--去掉背景效果-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景效果为透明-->
    </style>


    <!--  app加载框的style-->
    <style name="AppProgressDialogStyle" parent="AppDialog">

        <item name="colorAccent">@color/app_green_color</item>
    </style>


    <!-- //////////////////// app的默认效果/////////////////////////////-->

    <!--    AppButton的默认效果-->
    <style name="AppButtonStyle">
        <item name="android:background">@drawable/app_dialog_signbutton_selector</item>
    </style>

    <!--    App布局的默认效果-->
    <style name="AppLayoutStyle">
        <item name="android:background">@drawable/app_listview_selector</item>
    </style>
